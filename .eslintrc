{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "ecmaVersion": 6,
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [1,"tab"],
        "linebreak-style": ["error", "unix"],
        "strict": [1, "never"],
        "no-unused-vars": 0,
        "no-console": 0
    }
}